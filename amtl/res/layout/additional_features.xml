<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/additional_features_usbswitch_txt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/usbswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:orientation="vertical" >
        <RadioButton
            android:id="@+id/additional_features_ape_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/additional_features_ape_button" />
        <RadioButton
            android:id="@+id/additional_features_modem_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/additional_features_modem_button" />
    </RadioGroup>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#C0C0C0" />
    <Button
        android:id="@+id/additional_features_toggle_on1_btn"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="20px"
        android:text="@string/additional_features_toggle_on1_button" />
</LinearLayout>